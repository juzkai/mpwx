/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}
.tab-btn {
  position: fixed;
  bottom: 0px;
  width: 100%;
  border-radius: 0px;
}
.position-btn {
  position: absolute;
  bottom: 50px;
}
/* 顶部个人信息 */
.personal-wrap {
  height:200rpx;
  width:100%;
  display:block;
  /* background: #fff; */
  background: -webkit-linear-gradient(#242424, #666666); /* Safari 5.1 - 6.0 */
  background: -o-linear-gradient(#242424, #666666); /* Opera 11.1 - 12.0 */
  background: -moz-linear-gradient(#242424, #666666); /* Firefox 3.6 - 15 */
  background: linear-gradient(#242424, #666666); /* 标准的语法 */
}
.personal-wrap image {
  height: 120rpx;
  width: 120rpx;
  margin: 40rpx;
}
.personal-wrap view {
  position:absolute;
  left:200rpx;
  top:0rpx;
  height:200rpx;
  /* width:100%; */
}
/* 九宫格 */
.item-img-wrap {
  padding: 24rpx 0rpx;
}
.item image {
  width: 120rpx;
  height: 120rpx;
}
.item text {
  color: #333;
  font-size: 32rpx
}

